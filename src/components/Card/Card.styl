img.loading
  opacity: 0

.card.loading
  opacity: 0

///////////////////////////////////////////////////////////
// Card
///////////////////////////////////////////////////////////
.card
  font-weight: 300
  background: #fff
  border: 1px solid transparent
  overflow: hidden
  border-radius: 3px
  transition: box-shadow 0.25s cubic-bezier(0.165, 0.84, 0.44, 1), opacity 2.5s
  box-shadow: 0 3px 6px rgba(0,0,0,0.05), 0 3px 6px rgba(0,0,0,0.07)

  img
    transition: all 0.85s

  &:hover
    box-shadow: 0 19px 38px rgba(0,0,0,0.05), 0 15px 12px rgba(0,0,0,0.07)

.card-grid
  transition: all 0.5s
  margin: -90px auto 0 auto
  max-width: 340px
  column-count: 1

  .card
    max-width: 340px
    min-width: 300px
    width: 100%
    margin: 0 0 4rem
    display: inline-block

@media screen and (min-width: 720px)
  .card-grid
    max-width: 720px
    column-count: 2

@media screen and (min-width: 1100px)
  .card-grid
    max-width: 1100px
    column-count: 3

///////////////////////////////////////////////////////////
// Card Header
///////////////////////////////////////////////////////////
.card-header
  display: inline-block
  position: relative
  width: 100%
  min-height: 200px
  max-width: 420px

.card-header
  .card-header-hero
    width: 100%
    height: 100%
    min-height: 200px
    border-top-left-radius: 3px
    border-top-right-radius: 3px
    background-size: cover
    overflow: hidden

.card-header
  .badge
    position: absolute
    bottom: -6px
    right: 20px
    display: inline-block
    padding: 0 30px
    height: 26px
    line-height: 26px
    background: #000000
    text-align: center;
    border-radius: 13px
    text-transform: uppercase
    font-weight: 600
    font-size: 1.2rem
    color: #FFFFFF

.card-header
  .avatar
    width 60px
    height 60px
    border-radius: 50%
    border: 2px solid #FFFFFF
    background: #f3f3f3
    position: absolute
    bottom: -30px
    left: 20px
    overflow: hidden

    img
      border-radius: 50%
      width 60px
      height 60px

///////////////////////////////////////////////////////////
// Card Footer
///////////////////////////////////////////////////////////
.card-footer
  text-align: right
  border-top: 1px solid #F5F5F5
  position: relative
  padding: 20px

///////////////////////////////////////////////////////////
// Card Content
///////////////////////////////////////////////////////////
.card-content
  position: relative
  padding: 50px 20px 20px

.card-content
  p
    font-size: 1.4rem
    color: #2e2e2e

.card-content
  h2
    font-size: 2.2rem
    font-weight: 600
    color: #555
    line-height: 1em
    margin-bottom: 1rem

.card-content
  h5
    font-size: 1rem
    margin-bottom: 0.25rem
    text-transform: uppercase;
    color: #bbb

.card-content
  .btn-card
    margin: 20px auto 10px auto
    display: block
    background: #fff
    border: 1px solid #eee
    height: 40px
    line-height: 36px
    padding: 0 60px
    outline: 0
    border-radius: 20px
    text-decoration: none
    font-size: 1.6rem
    font-weight: 300
    color: #000
    background: url('./images/arrow.svg') center right 1rem no-repeat;

    &:hover
      cursor: pointer

    &:focus
      box-shadow: inset 0 0 3px 2px rgba(0,0,0,0.07)

///////////////////////////////////////////////////////////
// Card Action
///////////////////////////////////////////////////////////
.card-action
  .counter
    vertical-align: middle
    position: relative
    display: inline-block
    height: 34px
    line-height: @height
    text-align: center
    background: #F5F5F5
    box-sizing: border-box
    padding: 0 20px
    margin-left: 8px

    .arrow
      position: absolute
      left: -6px
      top: 50%
      margin-top: -6px
      width: 0
      height: 0
      border-top: 6px solid transparent
      border-bottom: 6px solid transparent
      border-right: 6px solid #F5F5F5

.card-action
  display: inline-block
  margin: 0 15px 0 0

  button
    vertical-align: middle
    outline: 0
    width: 38px
    height: 38px
    border none
    border-radius 50%

    &:hover
      cursor: pointer

    &:focus
      box-shadow: inset 0 0 3px 2px rgba(0,0,0,0.07)

.card-action
  .comments
    background: url('./images/comment.svg') no-repeat

.card-action
  .likes
    background: url('./images/like.svg') no-repeat

// Footer context
.card-footer
  .card-action
    margin: 0 0 0 15px
