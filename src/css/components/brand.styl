/*
 * Swanky Theme
 * Branding
 */

.brand
  position absolute
  z-index 5
  top 0
  left 0
  background $white
  height $header-height-mobile
  width 100%
  box-sizing border-box

  .logo
    width (128px / 2)
    height (128px / 2)
    border-radius 50%
    border 1px solid #d2d2d2
    display block
    background url('../img/rodleviton.png') no-repeat
    background-size @width @height
    margin 4.5rem auto 0 auto

    &:hover, &:focus
      text-decoration none
