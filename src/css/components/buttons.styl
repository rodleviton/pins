// Quick button reset
button
  text-shadow none
  font-weight 600
  border none

.btn-default
  font-family: 'Montserrat', sans-serif;
  text-decoration none
  display inline-block
  text-align center
  font-size 1.4rem
  color $brand-primary
  background #fff
  border-radius 18px
  border 1px solid $brand-primary
  height 36px
  line-height 34px
  box-sizing border-box
  text-transform uppercase
  padding 0 4rem
  margin 0 0.5rem
  font-weight 700

  &:visited
    color $brand-primary
    background #fff

  &:hover
    text-decoration none
    color $brand-primary
    cursor pointer

  &:focus, &:active
    text-decoration none
    box-shadow inset 0 0 3px 2px rgba(0,0,0,.07)
    color $brand-primary
    outline 0
